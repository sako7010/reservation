<!DOCTYPE html>
<html>
  <head>
    <title>Reservation</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>  

    <header>
      <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title">旅の宿</h1>
      <% end %>
      
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav_button" %>
      <% else %>  
        <%= link_to "ログイン", new_user_session_path, class: "nav_button" %>
        <%= link_to "新規登録", new_user_registration_path, class: "nav_button" %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
