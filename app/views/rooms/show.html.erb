<div class = "wrapper"> 
 <div class = container_room> 
    <div class = "room_show">
      <div class = image >
        <%= attachment_image_tag @room, :room_image,class:"show_img" %>
      </div>

      <div class = "show_list">
        <div class = "user_info" >
          a
          <%#登録したユーザー名表示%>
          <%= @room.user_id == current_user.id %>
        </div>
        <div class = "room_name_add">
          <%= @room.room_name %>
          <%= @room.address %>
        </div>
        <div class = "room_intro">
          <%= simple_format @room.room_introduction %>
        </div>
      </div>

      <%#登録したユーザーのみ編集ボタン表示%>
      <%# if @room.user.id == current_user.id %>
        <%= link_to "編集", edit_room_path(@room) , class: "show_button" %>
      <%# end %>
    </div>

    <div class = "booking_new">
      <p>部屋予約</p>
      <%= form_with model: @booking, url: confirm_bookings_path, method: :get ,local: true do |f| %>
        <table class = "room_booking">
          <tr>
            <th>料金</th>
            <td>¥<%= @room.price %> /日</td>
          </tr>
          <tr>
            <th><%= f.label :start_day, "開始日" %></th>
            <td><%= f.date_field :start_day %></td>
          </tr>
          <tr>
            <th><%= f.label :end_day, "終了日" %></th>
            <td><%= f.date_field :end_day %></td>
          </tr>
          <tr>
            <th><%= f.label :people, "人数" %></th>
            <td><%= f.number_field :people, placeholder: "人数を入力"%></td>
          </tr>
        </table>
        <%= f.hidden_field :room_id, value: @room.id %>
        <div class = "booking_btn">
          <%= f.submit "予約"%>
          <%= link_to "一覧に戻る", rooms_path(@room) , class: "show_button" %>
        </div>
      <% end %>
    </div>  
  </div>  
</div>
