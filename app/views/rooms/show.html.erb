<div class = "container"> 
  <div class = "row"> 
    <div class = "col-md-8 mt-4 px-3">
      <div class = "image" >
        <%= attachment_image_tag @room, :room_image,class:"show_img" %>
      </div>

      <div class = "show_list border-bottom py-3 d-flex flex-row">
        <div class = "user_info" >
          <%= attachment_image_tag @user,:profile_image, class:"profile-img mt-2 ml-2" %>
        </div>
        <div class = "room_name_add pl-3">
          <p class = "font-weight-bold"><%= @room.room_name %></p><br>
          <p><%= @room.address %></p>
        </div>
      </div>
      <div class = "room_intro border-bottom py-3">
        <%= simple_format @room.room_introduction %>
      </div>
    </div>
    <%#予約%>
    <div class = "col-md-4 mt-4">
      <div class = "px-2 border">
        <p class = "text-center mt-2 field">部屋予約</p>
        <%= form_with model: @booking, url: confirm_bookings_path, method: :get ,local: true do |f| %>
          <div class = "form-group">
            <label>料金:</label>
            ¥<%= @room.price %> /日
          </div>  
          <div class = "form-group">
            <label>チェックイン</label>
            <%= f.date_field :start_day ,class: "form-control field mb-3" %>
          </div>  
          <div class = "form-group">
            <label>チェックアウト</label>
            <%= f.date_field :end_day ,class: "form-control field mb-3" %>
          </div>
          <div class = "form-group">
            <label>人数</label>
            <%= f.number_field :people, placeholder: "人数を入力" ,class: "form-control field mb-3" %>
            <hr>
          </div>
            <%= f.hidden_field :room_id, value: @room.id %>
          <% if user_signed_in? %>
            <div class = "form-group">  
              <%= f.submit "予約" , class:"btn btn-primary form-control field mb-3"%>
              <%= link_to "一覧に戻る", rooms_path(@room) , class: "btn btn-info form-control field mb-3" %>
            </div>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-danger form-control field mb-3" %>
          <% end %>
        <% end %>
      </div>
    </div>  
  </div>  
</div>
