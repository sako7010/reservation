<div class = "main-room"> 
  <div class = "container d-flex align-items-center justify-content-center">  
    <div class = "mx-20 p-5 border" style= "with: 500px;" >
      <h3 class= "field mb-4" >ルーム情報編集</h3>

      <%= form_with model: @room do |f| %>
        <div class = "form-group" >
          <label>ルーム名</label>
          <%= f.text_field :room_name, placeholder: "ルーム名を入力" ,class: "form-control field mb-3" %>
          <hr>
        </div>

        <div class = "form-group" >
          <label>ルーム紹介</label>
          <%= f.text_area :room_introduction, placeholder: "ルームの紹介文を入力" ,class: "form-control field mb-3" %>
          <hr>
        </div>

        <div class = "form-group" >
          <label>料金</label>
          <%= f.text_field :price, placeholder: "１日あたりの料金を入力",class: "form-control field mb-3" %>
          <hr>
        </div>
        
        <div class = "form-group" >
          <label>住所</label>
          <%= f.text_field :address, placeholder: "住所を入力" ,class: "form-control field mb-3" %>
          <hr>
        </div>

        <div class = "form-group" >
          <label>ルーム画像</label>
          <%= f.attachment_field :room_image %>
          <hr>
        </div>
        <div class = "form-group">  
          <%= f.submit "ルーム登録" , class:"btn btn-primary "%>
        </div>
      <% end %>
    </div>
  </div>
</div>
