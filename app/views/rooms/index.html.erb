<div class = "room-posts">
  <h1>登録済みルーム一覧</h1>

  <table class = "room-table">
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <%= link_to room_path(room) do %>
              <%= attachment_image_tag room,:room_image, class:"room-img" %>
            <% end %>
          </td>
          <td><%= link_to room.room_name , room_path(room) %></td>
          <td><%= room.room_introduction %></td>
          <td>¥<%= room.price %>-</td>
          <td><%= room.updated_at.strftime("%Y年%m月%d日") %></td>
        </tr>
      <% end %>
    </tbody>  
  </table>
          
</div>
