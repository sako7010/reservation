<div class = "container-fluid">
  <h1 class = "my-4 mx-5">検索結果:<%= Room.count %>件</h1>
  <div class = "row m-3 p-3">
    <% @results.each do |room| %>
      <div class = "col-sm-6 col-lg-4 col-xl-3 p-3">
        <div class = "room-card border" >
          <%= link_to room_path(room), class: "link" do %>
            <%= attachment_image_tag room,:room_image, class:"room-img pt-3" %>
            <div class = "room-profile px-3 pt-3">
              <p class = "link fs-2 text-body font-weight-bold "><%= room.room_name %></p>
              <p class = "link text-body"><%= room.address %></p>
              <p class = "link text-right text-body">¥<%= room.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
