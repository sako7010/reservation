<div class = "new-table">
  <h2>新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :user_name, autofocus: true, autocomplete: "email", placeholder: "名前を入力" , class:"new_input" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"new_input"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class:"new_input"   %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class:"new_input"  %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class:"new_submit"  %>
    </div>

    <div class="lender_link">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

