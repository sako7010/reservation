<div class = "container-fluid">
  <div class = "row">
    <div class = "col-lg-2">
      <p><%= render 'shared/user-link' %></p>
    </div>

    <div class = "col-lg-8">
      <div class = "profile border">
        <h3 class= "field mb-4 mt-3" >登録内容</h3><hr>
          <div class = "row field-mb-3 ml-3">
            <label class = "mb-3 col-md-3 font-weight-bold">ユーザー名</label>
            <p class = "mb-3 col-md-9"><%= @user.user_name %></p>
          </div>
          <div class = "row field-mb-3 ml-3">
            <label class = "mb-3 col-md-3 font-weight-bold">メールアドレス</label>
            <p class = "mb-3 col-md-9"><%= @user.email %></p>
          </div>
          <div class = "row field-mb-3 ml-3">
            <label class = "mb-3 col-md-3 font-weight-bold">自己紹介</label>
            <p class = "mb-3 col-md-9"><%= @user.profile %></p>
          </div>
          <div class = "row field-mb-3 ml-3">
            <label class = "mb-3 col-md-3 font-weight-bold">パスワード</label>
            <p class = "mb-3 col-md-9">*********</p>
          </div>
          <div class = "row field-mb-3 ml-2">
            <label class = "mb-3 col-md-3 font-weight-bold"><%= link_to "編集", edit_user_registration_path, class: "btn btn-primary ml-3" %></label>
          </div>
      </div>
    </div>
  </div>
</div>


