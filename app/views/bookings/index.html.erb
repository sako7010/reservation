<div class = "container-fluid">
  <div class = "room-posts m-4">
    <h1 class = "pb-2">予約済みルーム一覧</h1>
    <table class = "room-table border-top mx-3">
      <thead>
        <tr class = "border-bottom">
          <th class = "col-2 text-center py-2">ルーム画像</th>
          <th class = "col-2 text-center py-2">ルーム名</th>
          <th class = "col-2 text-center py-2">ルーム紹介</th>
          <th class = "col-1 text-center py-2">合計料金</th>
          <th class = "col-2 text-center py-2">開始日</th>
          <th class = "col-2 text-center py-2">終了日</th>
          <th class = "col-2 text-center py-2">予約確定日時</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <% if booking.user_id == current_user.id %> 
            <tr class = "border-bottom  py-2">
              <td class = "p-2 text-center">
                <%= link_to room_path(booking.room.id) do %>
                  <%= attachment_image_tag booking.room, :room_image, class:"room-img"%>
                <% end %>
              </td>
              <td class = "px-2 text-center">
                <%= link_to room_path(booking.room.id) do %>
                  <%= booking.room.room_name %>
                <% end %>
              </td>
              <td class = "px-2 text-center"><%= booking.room.room_introduction %></td>
              <td class = "px-2 text-center">¥<%= booking.total_amount %>-</td>
              <td class = "px-2 text-center"><%= booking.start_day.strftime("%Y年%m月%d日") %></td>
              <td class = "px-2 text-center"><%= booking.end_day.strftime("%Y年%m月%d日") %></td>
              <td class = "px-2 text-center"><%= booking.updated_at.strftime("%Y年%m月%d日") %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>  
    </table>
  </div>        
</div>
